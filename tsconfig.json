{
  "compilerOptions": {
    "target": "ES2023",
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@lib/*": [ "lib/*" ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ]
}
